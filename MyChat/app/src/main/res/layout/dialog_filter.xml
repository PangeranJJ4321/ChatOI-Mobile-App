<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/surface_color">

    <!-- Dialog Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Filter Conversations"
        android:textSize="20sp"
        android:textColor="@color/primary_text"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Conversation Type Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Conversation Type"
        android:textSize="16sp"
        android:textColor="@color/primary_text"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginBottom="12dp" />

    <CheckBox
        android:id="@+id/cb_group_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Group Conversations"
        android:textColor="@color/primary_text"
        android:fontFamily="@font/poppins_regular"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_marginBottom="8dp"
        app:buttonTint="@color/primary_color" />

    <CheckBox
        android:id="@+id/cb_private_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Private Conversations"
        android:textColor="@color/primary_text"
        android:fontFamily="@font/poppins_regular"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_marginBottom="16dp"
        app:buttonTint="@color/primary_color" />

    <!-- Message Status Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Message Status"
        android:textSize="16sp"
        android:textColor="@color/primary_text"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginBottom="12dp" />

    <CheckBox
        android:id="@+id/cb_unread_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Unread Messages Only"
        android:textColor="@color/primary_text"
        android:fontFamily="@font/poppins_regular"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_marginBottom="24dp"
        app:buttonTint="@color/primary_color" />

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_clear_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:textColor="@color/primary_color"
            android:backgroundTint="@android:color/transparent"
            app:strokeColor="@color/primary_color"
            app:strokeWidth="1dp"
            app:cornerRadius="20dp"
            android:layout_marginEnd="12dp"
            android:fontFamily="@font/poppins_medium"
            style="@style/Widget.Material3.Button.OutlinedButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_apply_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apply"
            android:textColor="@color/surface_color"
            android:backgroundTint="@color/primary_color"
            app:cornerRadius="20dp"
            android:fontFamily="@font/poppins_medium"
            style="@style/Widget.Material3.Button" />

    </LinearLayout>

</LinearLayout>