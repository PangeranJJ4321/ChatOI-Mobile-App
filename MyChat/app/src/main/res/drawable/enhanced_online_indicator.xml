<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer ring -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/surface_color" />
        </shape>
    </item>
    <!-- Inner circle -->
    <item android:inset="3dp">
        <shape android:shape="oval">
            <gradient
                android:angle="45"
                android:startColor="@color/success_color"
                android:endColor="#4AE56B"
                android:type="linear" />
        </shape>
    </item>
</layer-list>